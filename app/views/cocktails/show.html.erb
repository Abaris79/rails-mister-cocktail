<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h2><%= @cocktail.name %></h2>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %> of <%= dose.ingredient.name %></li>
        <% end %>
      </ul>
      <%= link_to "add ingredient", new_cocktail_dose_path(@cocktail) %>
      <%= link_to "Back to cocktails index", cocktails_path%>
    </div>
  </div>
</div>
